#!/bin/bash
set -e

cat > .travis.yml <<HERE
---
language: "node_js"
node_js: "node"
sudo: false
cache:
  directories:
    - "node_modules"
install: "npm install"
script: "npm test"
HERE

echo ".travis.yml" >> .npmignore

grep "^\.npmignore$" .npmignore || echo ".npmignore" >> .npmignore

git add .travis.yml .npmignore
git commit -m "Configure Travis CI"

node-travis-enable
git push
