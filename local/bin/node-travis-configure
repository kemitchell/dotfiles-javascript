#!/bin/bash
set -e

cat > .travis.yml <<HERE
---
language: "node_js"
node_js: [ "0.10", "0.12", "4", "5" ]
sudo: false
cache:
  directories:
    - "node_modules"
HERE

echo ".travis.yml" >> .npmignore

# grep "^\.npmignore$" .npmignore || echo ".npmignore" >> .npmignore

git add .travis.yml .npmignore
git commit -m "Configure Travis CI"

node-travis-enable
git push
