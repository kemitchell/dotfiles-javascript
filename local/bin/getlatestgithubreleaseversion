if [ -z "$1" ] ;then
  echo "Usage: <owner/repo>"
  exit 1
fi

if ! hash ndjson-cat >/dev/null 2>&1; then
  npm i -g ndjson-cli
fi

if ! hash json >/dev/null 2>&1; then
  npm i -g json
fi

set -e
curl --silent "https://api.github.com/repos/$1/releases/latest" \
| ndjson-cat \
| ndjson-filter "d.prerelease === false" \
| json tag_name
